{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "typeRoots": ["./node_modules/@types"],
    "types": [],
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": false,  // Changed to false to ensure type checking of library declaration files
    "baseUrl": ".",  // Ensures that module resolution starts in the project root
    "paths": {
      "*": ["node_modules/*", "src/types/*"]  // Adjust according to your folder structure if necessary
    },
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*"  // Ensures all files under src are included in compilation
  ],
  "exclude": [
    "node_modules",  // Standard practice to exclude node_modules
    "**/*.spec.ts"  // Exclude test files from compilation if necessary
  ]
}
